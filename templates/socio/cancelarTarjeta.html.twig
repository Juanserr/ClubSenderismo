{% extends 'socio/index.html.twig' %}

{% block title %}{{parent()}} - Cancelación de tarjeta federativa{% endblock %}

{% block body %}

{{parent()}}

{% for message in app.flashes('exito') %}
    <div class= "alert alert-success" style="margin-top:80px">>
        {{ message }}
    </div>
{% endfor %}

<div class="container h-100 " style="margin-top:80px">
    <h1 style="color:RoyalBlue"><center>CANCELAR TARJETA FEDERATIVA<center></h1>
    <div class="row justify-content-center align-items-center" style="margin-top:30px; border: 10px ridge RoyalBlue;">
        <div class="col-8 bg-white rounded my-3 p-5">
    {% if tarjeta == 1 %}

                <h2>¿Está seguro/a querer cancelar su Tarjeta federativa infantil?</h2>
                <div style="class=form-row">
                {{form(form)}}
                </div>
                <div style="margin-top:10px">
                    <button type="button" class="btn btn-secondary" onclick="history.back()">Cancelar</button>
                </div>

    {% endif %}

    {% if tarjeta == 2 %}
                <h2>¿Está seguro/a querer cancelar su Tarjeta federativa juvenil?</h2>
                <div style="class=form-row">
                {{form(form)}}
                </div>
                <div style="margin-top:10px">
                    <button type="button" class="btn btn-secondary" onclick="history.back()">Cancelar</button>
                </div>

    {% endif %}

    {% if tarjeta == 3 %}

                <h2>¿Está seguro/a querer cancelar su Tarjeta federativa mayor?</h2>
                <div style="class=form-row">
                {{form(form)}}
                </div>
                <div style="margin-top:10px">
                    <button type="button" class="btn btn-secondary" onclick="history.back()">Cancelar</button>
                </div>

    {% endif %}
        </div>
    </div>
            
</div>

{% endblock %}

{% block content %}
{% endblock %}
