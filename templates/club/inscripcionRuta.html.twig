{% extends 'club/index.html.twig' %}
{% block title %}{{parent()}} - Inscribirse a una ruta{% endblock %}
{% block body %}
{{parent()}}

<div class="container h-100 " style="margin-top:80px">
    <div class="row justify-content-center align-items-center" style="margin-top:30px; border: 10px ridge RoyalBlue;">
        <div class="col-8 bg-white rounded my-3 p-5">
            <div style="class=form-row">
            <h3>¿Está seguro de querer inscribirse a esta ruta?</h3>
            {{form(form)}}
            </div>
            <div style="margin-top:10px">
                <button type="button" class="btn btn-default" onclick="location.href='{{path('rutaBuscarUsuario')}}'">Cancelar</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block content %}
{% endblock %}
