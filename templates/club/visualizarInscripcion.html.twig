{% extends 'club/index.html.twig' %}
{% block title %}{{parent()}} - Inscripcion de Ruta{% endblock %}
{% block body %}

{{parent()}}

{% for message in app.flashes('success') %}
    <div class= "alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('info') %}
    <div class= "alert alert-warning">
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('danger') %}
    <div class= "alert alert-danger">
        {{ message }}
    </div>
{% endfor %}

<div class="container h-100 " style="margin-top:80px">
    <div class="row justify-content-center align-items-center" style="margin-top:30px; border: 10px ridge RoyalBlue;">
        <div class="col-8 bg-white rounded my-3 p-5">
            <h2>Datos de la Ruta</h2>
            <div style="class=form-row">
                {{form(formulario)}}
            </div>
            <div style="margin-top:10px">
                <button type="button" class="btn btn-secondary" onclick="location.href='{{ path('rutaBuscarUsuario')}}'">Volver</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block content %}
{% endblock %}