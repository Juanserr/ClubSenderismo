{% extends 'club/index.html.twig' %}
{% block title %}{{parent()}} - Login de solicitud para ser socio{% endblock %}
{% block body %}

{{parent()}}
    {% for message in app.flashes('info') %}
        <div class= "alert alert-info" role="alert" style="margin-top:60px" >
            {{ message }}
        </div>
    {% endfor %}
<div class="container h-100 " style="margin-top:80px">
    <div class="row justify-content-center align-items-center" style="margin-top:30px; border: 10px ridge RoyalBlue;">
        <div class="col-8 bg-white rounded my-3 p-5">
            <h2>Formulario para su solicitud</h2>
            <div style="class=form-row">
                {{form(formulario)}}
            </div>
            <div style="margin-top:10px">
                <button type="button" class="btn btn-secondary" onclick="history.back()">Cancelar</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block content %}
{% endblock %}